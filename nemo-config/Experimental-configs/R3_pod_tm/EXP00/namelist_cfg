   nn_tlu_nlev   =  2                      ! WLT noise: Number of detail levels retained
   nn_daub_ord.  =  6                      ! Order of the Daubechies Wavelet
   biaSIGN       = -1                      ! Bias sign (this must go someday)
/
!-----------------------------------------------------------------------
&namtlu_nke   ! [FT] TLU: amplitude for noise and bias
!-----------------------------------------------------------------------
   nsamples      =      10                 ! Number of samples 
   amp_noi       =  25e-03                 ! Fixed energy of the noise 
   amp_bia       =   5e-04                 ! Fixed energy of the bias
