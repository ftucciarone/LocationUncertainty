!   nm_mod_nc     = "../../../../pod-results/tmfilt_R27toR3_spm@.nc"
   nm_mod_nc     = "../../../../pod-results/tmnewfilt_R27toR3_spm@.nc"
   nn_tlu_nmod   = 70                                   ! POD noise: static number of modes for noise (if no energy mode)
   biaSIGN       = -1                                    ! Bias sign (this must go someday)
/
!-----------------------------------------------------------------------
&namtlu_dmd   ! [FT] TLU: data-based noise from DMD
!-----------------------------------------------------------------------
!  nm_mod_nc     = "../../../../dmd-results/keLR_ocludat_r3_ZeroMean_36w1_72w2.nc"
!   nm_mod_nc     = "../../../../dmd-results/LR_diag_r3_WithMean_0d1_36d2.nc"
   nm_mod_nc     = "../BASE/ssh_diagDMD.nc"
   nn_tlu_nmod_r = 20                                      ! DMD noise: number of random modes
   nn_tlu_nmod_c = 20                                      ! DMD noise: number of correlated modes
   biaSIGN       = -1                                      ! Bias sign (this must go someday)
/
!-----------------------------------------------------------------------
